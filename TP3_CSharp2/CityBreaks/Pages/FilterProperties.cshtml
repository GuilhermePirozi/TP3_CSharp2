@page
@model CityBreaks.Pages.FilterPropertiesModel
@{
    ViewData["Title"] = "Filtrar Propriedades";
}

<h2>Filtrar Propriedades</h2>

<form method="get">
    <div class="mb-3">
        <label>Nome da Propriedade:</label>
        <input name="propertyName" value="@Model.PropertyName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Nome da Cidade:</label>
        <input name="cityName" value="@Model.CityName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Preço Mínimo:</label>
        <input name="minPrice" type="number" step="0.01" value="@Model.MinPrice" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Preço Máximo:</label>
        <input name="maxPrice" type="number" step="0.01" value="@Model.MaxPrice" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

@if (Model.Properties?.Count > 0)
{
    <h3 class="mt-4">Resultados</h3>
    <ul class="list-group">
        @foreach (var prop in Model.Properties)
        {
            <li class="list-group-item">
                <strong>@prop.Name</strong> – R$ @prop.PricePerNight.ToString("F2") – @prop.City.Name
            </li>
        }
    </ul>
}
else if (Model.Properties != null)
{
    <p class="mt-4"><em>Nenhuma propriedade encontrada.</em></p>
}
